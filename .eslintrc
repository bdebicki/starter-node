{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "filenames"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "root": true,
  "rules": {
    ////////// Stylistic Issues //////////

    "indent": [2, "tab"],
    "no-tabs": 0,                     // turn on tabs
    "comma-dangle": [                 // enforce consistent comma style (airbnb overrided - functions)
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ],
    "function-paren-newline": [
      "error",
      "consistent"
    ],
    "no-plusplus":  [                  // disallow the unary operators ++ and -- (airbnb overrided - added "allowForLoopAfterthoughts")
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-underscore-dangle": [          // disallow dangling underscores in identifiers (airbnb overrided "allowAfterThis")
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "space-before-function-paren": [   // enforce consistent spacing before function definition opening parenthesis (airbnb overrided â€“ never use space in anonymous functions)
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],

    ////////// ECMAScript 6 //////////

    "arrow-parens": [                           // require parentheses around arrow function arguments (airbnb overrided "as needed" -> "always")
      "error",
      "always"
    ],

    ////////// File names //////////

    "filenames/match-exported": "error"
  },

  "overrides": [
    {
      "files": [ "**/__tests__/*.js" ],
      "globals": {
        "expect": false,
        "describe": false,
        "it": false
      },
      "rules": {
        "filenames/match-regex": [
          "error",
          "^[a-zA-Z]+\\.test$"
        ]
      }
    }
  ]
}
